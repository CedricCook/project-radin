<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/first_name_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/last_name_new_user"
        android:layout_alignParentTop="true"
        android:hint="@string/first_name"
        android:inputType="textPersonName">

    </EditText>

    <EditText
        android:id="@+id/last_name_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_new_user"
        android:layout_below="@+id/first_name_new_user"
        android:hint="@string/last_name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_new_user"
        android:layout_below="@+id/last_name_new_user"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address_new_user"
        android:layout_below="@+id/email_new_user"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/address_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iban_new_user"
        android:layout_below="@+id/password_new_user"
        android:hint="@string/iban" />
    
    <EditText
        android:id="@+id/iban_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bic_swift_address_new_user"
        android:layout_below="@+id/address_new_user"
        android:hint="@string/address" />

    <EditText
        android:id="@+id/bic_swift_address_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iban_new_user"
        android:layout_centerHorizontal="true"
        android:hint="@string/bic_swift_address" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bic_swift_address_new_user"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up_button_text" />

    

</RelativeLayout>