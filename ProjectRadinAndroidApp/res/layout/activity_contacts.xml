<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.radin.ContactsActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/refreshContactButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableTop="@drawable/glyphicon_refresh" />

        <Button
            android:id="@+id/addFriendContactButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:onClick="dialogAddFriend"
            android:drawableTop="@drawable/glyphicons_user_add" />
    </RelativeLayout>

    <ListView
        android:id="@+id/fullContactListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>