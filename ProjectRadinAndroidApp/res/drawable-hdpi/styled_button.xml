<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      <item android:state_pressed="true" >
    <shape>
        
      <solid
          android:color="@color/mediumYellow" />
      <stroke
          android:width="1dp"
          android:color="@color/header" />
      <corners
          android:radius="10dp" />
      <padding
          
          android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/background"
          android:endColor="@color/header"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/header" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
    </shape>
  </item>

</selector>
